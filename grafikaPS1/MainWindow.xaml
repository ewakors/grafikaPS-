<Window x:Class="grafikaPS1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grafikaPS1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">

    <Grid RenderTransformOrigin="0.499,0.596">
        
        <ToggleButton Height="30" Name="addLine" Content="Add line"  Click="addLine_Click" Margin="0,0,457,289" />
        <ToggleButton Height="30" Name="addEllipse" Content="Add elipse" Click="addEllipse_Click" Margin="154,1,299,288"/>
        <ToggleButton Height="30" Name="addRectengle" Content="Add rectengle" Click="addRectengle_Click" Margin="65,1,368,288" />
        <TextBox Name="heightTxt" Text="Height" Foreground="Gray" GotFocus="YourGotFocusEvent" Margin="235,6,235,294"/>
        <TextBox Name="widthTxt" Text="Width" Foreground="Gray" GotFocus="YourGotFocusEvent" Margin="303,7,167,293"/>
        <TextBox Name="ticknessTxt" Text="Tickness" Foreground="Gray" GotFocus="YourGotFocusEvent" Margin="368,6,98,294"/>

        <Canvas Background="Gray" Name="canvasArea"
                MouseLeftButtonDown="canvasArea_MouseLeftButtonDown"
                MouseRightButtonDown="canvasArea_MouseRightButtonDown" Margin="0,36,0,0">

        </Canvas>
    </Grid>
